<div class="container">

  <div class="page-header">
    <h1>Cadastro de professor</h1>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <h3>Professor Efetivo</h3>

      <%= form_with(model: professor, local: true) do |form| %>
      <% if professor.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(professor.errors.count, "error") %> não foi possível salvar este professor:</h2>

        <ul>
          <% professor.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
        </ul>
      </div>
      <% end %>


      <div class="form-group">
        <%= form.label :nome %>
        <%= form.text_field :nome, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :registro %>
        <%= form.number_field :registro, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :nota_prova %>
        <%= form.number_field :nota_prova, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= form.label :pontuacao %>
        <%= form.number_field :pontuacao, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :categoria %>
        <%= form.select :categoria_id, @categoria_options, {include_blank: "Selecione..."}, class: 'form-control' %>
        
      </div>

      
        <%= form.submit "Atualizar" , class: "btn btn-default"%>
      
      


      <% end %>
    </div>

  </div>

 