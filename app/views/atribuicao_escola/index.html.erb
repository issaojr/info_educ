<p id="notice"><%= notice %></p>

<h1>Professores</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Registro</th>
      <th>Nota prova</th>
      <th>Pontuacao</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professores.each do |professor| %>
      <tr>
        <td><%= professor.nome %></td>
        <td><%= professor.registro %></td>
        <td><%= professor.pontuacao %></td>
        <td><%= professor.categoria.descricao %></td>
        <td><%= link_to 'Atribuir Sala', edit_atribuicao_escola_path(professor) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

